            </div>
            <form class="SearchUI" action= <%= '/account/'+ u_login +'/1/default' %>  method="POST">
                <input id="searcharea" name = "searcharea" rows=1 placeholder="–ü–æ–∏—Å–∫ –ø–æ –∑–∞–¥–∞—á–µ"></input>
                <select name="selector" id = "selector">
                    <option value="all" selected>–í—Å–µ –ø–æ—Å—ã–ª–∫–∏</option>
                    <option value="oks" >–¢–æ–ª—å–∫–æ —É—Å–ø–µ—à–Ω—ã–µ</option>
                </select>
                <button id="submitsearch">–ù–∞–π—Ç–∏</button>
            </form>

            <table class='taskslist' id = "table"></table>

            <div class='pageinfo'>
                <div class="pageRefs"><%= pageInfo %></div>
                    <div class="pageRefs">
                    <% for(let i=0; i < pages; i++){ %>
                        <% if(i+1==page){ %>
                            <a class="tablerefs" style="font-size: 23px;font-weight:900;"><%= i+1 %></a>
                        <% }else{ %>
                                <a class="tablerefs" style="font-size: 20px;" href=<%=`/account/${u_login}/${i+1}/${search}`%>><%= i+1 %></a>
                        <% } %>
