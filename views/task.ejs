<!DOCTYPE html>
<html>
    <head>
        <title>Задача <%= ID %></title>

        <meta charset="utf-8">
        <meta name="viewport"
              content="width=device-width, initial-scale=1.0,
              maximum-scale=1.0, minimum-scale=1.0,
              user-scalable=no, minimal-ui">
        <meta name="full-screen" content="yes">

        <!-- <link rel="stylesheet" href="/public/css/style.css" type="text/css"> -->
        </head>
    <body>
        <main>
        <form action='/task/<%= ID %>'  method="POST">
            <div class="container">
                    <span id="left">
                        <textarea class="taskarea" id="code" name = "code" required cols=30 rows=30 placeholder="Place code here"></textarea>
                    </span>
                    <span id="right">
                        <textarea  class="taskarea" id="result" name = "result" required cols=30 rows=30 readonly>
                            <% RESULT.forEach(function(item){ %>
                            <p><%= item[0] %> <a id=<%= item[2] %>><%= item[1] %></a></p>
                            <% }); %>
                        </textarea>
                    </span>
                    <!-- <div  id="result" name="result">
                        <ul>
                            <% RESULT.forEach(function(item){ %>
                                <li><%= item[0] %> <a id=<%= item[2] %>><%= item[1] %></a></li>
                            <% }); %>
                        </ul>
                    </div> -->
                <div>
                <button id="submit">Send</button>
                </div>
            </div>
        </form>
    </main>
    </body>
</html>