<!DOCTYPE html>
<html>
  <head>
    <title>Контрольные уроки</title>

    <meta charset="utf-8">
    <meta name="viewport"
      content="width=device-width, initial-scale=1.0,
      maximum-scale=1.0, minimum-scale=1.0,
      user-scalable=no, minimal-ui">
    <meta name="full-screen" content="yes">

    <link rel="stylesheet" href="/public/css/layout.css" type="text/css">
  </head>
  <body>
    <main>
      <h1>Контрольные уроки</h1>
      <a class="editref addhref" style="background-color: rgba(255, 35, 35, 0.692); padding: 10px; font-size: 1.5rem; font-weight:bolder"" href="/lessons/<%= u_login %>/1/default&all&ture&all">Обычные Уроки</a>
      <% if (isTeacher){ %>
        <a class="tlrefs" href="/quiz/add">[Добавить урок]</a>
      <% } %>

      <form class="SearchUI" action='/quizzes/<% u_login %>/1/default'  method="POST">
        <input name = "searcharea" rows=1 placeholder="Поиск урока(ID)"></input>
        <button id="submitsearch">Найти</button>
      </form>

      <table class='taskslist' id="table">
        <tr>
          <th>ID</th>
          <th>Название</th>
          <th>Автор</th>
        </tr>
        <% for(let i = 0; i<quizzes.length; i++){ %>
          <tr>
            <% if(isTeacher){ %>
              <td><%= parseInt(quizzes[i].identificator) %></td>
            <% } else { %>
              <td><%= parseInt(quizzes[i].identificator/2)+1 %></td>
            <% } %>
            <td><a class="tlhref" href="/quiz/page/<%= u_login %>/<%= quizzes[i].identificator %>"><%= quizzes[i].title %></a></td>
            <td><%= quizzes[i].author %></td>
          </tr>
        <% } %>
      </table>
      <div class='pageinfo'>
        <div class="pageRefs"><%= pageInfo %></div>
        <div class="pageRefs">
          <% for(let i=0; i < pages; i++){ %>
            <% if(i+1==page){ %>
              <a class="tablerefs" style="font-size: 23px;font-weight:900;"><%= i+1 %></a>
            <% }else{ %>
              <a class="tablerefs" style="font-size: 20px;"href=<%=`/quizzes/${u_login}/${i+1}/${search}`%>><%= i+1 %></a>
            <% } %>
          <% } %>
        </div>
      </div>
    </main>
  </body>
</html>