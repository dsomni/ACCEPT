<header>
<a href="http://vplicei.org/"><img src = "http://vplicei.org/wp-content/uploads/2016/01/vml-1.png" alt="ВМЛ"></a>
<div class="navigationButtons">
<% if (name!=""){ %>
<% if (title!="Main Page"){ %>
<button onClick='location.href="/"'>ГЛАВНАЯ</button>
<% }if (title.slice(0, 4)!="Task"){  %> 
<button onClick='location.href="/tasks"'>ЗАДАЧИ</button>
<% }if (isTeacher){ %>
    <% if (title!="Add Task"){ %>
    <button onClick='location.href="/addtask"'>ДОБАВИТЬ ЗАДАЧУ</button>
<% }}} %>
</div>
<div class = 'loginInterface'>
<% if (name==""){ %>
<form action="/" method="POST" class = "loging">
    <input type="login" name="login" placeholder="ЛОГИН" required>
    <input type="password" name="password" placeholder="ПАРОЛЬ" required>
    <button type="submit">ВОЙТИ</button>
</form>
<% } else { %>
    <a href = '/account' class = 'userName'><%= name %></a>
    <form action = '/logout?_method=DELETE' method = 'POST'>
        <button type = 'submit'>ВЫЙТИ</button>
    </form>
<% } %>
</div>

</header>